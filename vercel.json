{
    "buildCommand": "pnpm turbo run build --filter=web --filter=storybook",
    "builds": [
      {
        "src": "apps/web/package.json",
        "use": "@vercel/next",
        "config": {
          "distDir": ".next"
        }
      },
      {
        "src": "apps/storybook/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "storybook-static"
        }
      }
    ],
    "routes": [
      {
        "src": "/storybook/(.*)",
        "dest": "/apps/storybook/storybook-static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/apps/web/.next/$1"
      }
    ]
  }